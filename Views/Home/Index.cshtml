@model IEnumerable<School.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}

<a asp-action="Student" asp-route-id="null">Ekle</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col" >Id</th>
            <th scope="col" >Ad</th>
            <th scope="col" >Soyad</th>
            <th scope="col" >Yas</th>
            <th scope="col" >Email</th>
            <th scope="col" >Telefon</th>
            <th scope="col" >Adres</th>



    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                 <td>@item.Email</td>
                  <td>@item.Telefon</td>
                   <td>@item.Adres</td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                <a class="btn btn-secondary" asp-action="Student" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>
            
        }
    </tbody>
</table>